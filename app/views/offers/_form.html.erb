
<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.association :user, label: 'Auteurice de l\'annonce', include_blank: false %>
    <%= f.association :users, 
                      label: 'Personnes ayant l\'annonce en marque-page',
                      as: :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
