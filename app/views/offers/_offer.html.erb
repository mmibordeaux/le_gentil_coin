<div id="<%= dom_id offer %>">
  <p>
    <strong>Name:</strong>
    <%= offer.name %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag offer.image, width: 100 %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= offer.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= offer.price %>
  </p>

  <p>
    <strong>Auteurice </strong>
    <%= link_to offer.user %>
  </p>

  <%= offer.users.count %> ❤️
  <ul>
    <% offer.users.each do |user| %>
      <li><%= link_to user %></li>
    <% end %>
  </ul>
</div>
